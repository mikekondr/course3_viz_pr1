<Window x:Class="task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Scene" Height="600" Width="800">

    <Window.Resources>
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="rotationY" 
                             Storyboard.TargetProperty="Angle" 
                             From="0" To="360" Duration="0:0:18" />
        </Storyboard>
    </Window.Resources>

    <Viewport3D>
        <!-- Камера -->
        <Viewport3D.Camera>
            <PerspectiveCamera Position="0, 0, 3" LookDirection="0, 0, -1" UpDirection="0, 1, 0" FieldOfView="90"/>
            <!--<OrthographicCamera Position="0, 0, 3" LookDirection="0, 0, -1" UpDirection="0, 1, 0" Width="6"/>-->
        </Viewport3D.Camera>

        <!-- Освітлення -->
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <Model3DGroup>
                    <AmbientLight Color="LightSlateGray"/>
                    <SpotLight Color="White" Position="3,3,3" Direction="-1,-1,-1" InnerConeAngle="35" OuterConeAngle="90" /> 
                </Model3DGroup>
            </ModelVisual3D.Content>
        </ModelVisual3D>

        <!-- Сцена з обертанням -->
        <ModelVisual3D>
            <ModelVisual3D.Transform>
                <Transform3DGroup>
                    <RotateTransform3D>
                        <RotateTransform3D.Rotation>
                            <AxisAngleRotation3D Axis="1, 0, 0" Angle="45"/>
                        </RotateTransform3D.Rotation>
                    </RotateTransform3D>
                    <RotateTransform3D>
                        <RotateTransform3D.Rotation>
                            <AxisAngleRotation3D x:Name="rotationY" Axis="0, 1, 0" Angle="-50"/>
                        </RotateTransform3D.Rotation>
                    </RotateTransform3D>
                    <!--<ScaleTransform3D ScaleX="1.2" ScaleY="0.8" ScaleZ="1"/>-->
                </Transform3DGroup>
            </ModelVisual3D.Transform>
            <ModelVisual3D.Content>
                <Model3DGroup>
                    <!-- Верхній трикутник -->
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D>
                                <MeshGeometry3D.Positions>
                                    -1, 1, 0  1, 1, 0  0, 1, -1.5
                                </MeshGeometry3D.Positions>
                                <MeshGeometry3D.TriangleIndices>
                                    0 1 2
                                </MeshGeometry3D.TriangleIndices>
                                <MeshGeometry3D.Normals>
                                    0, 0, 1  0, 0, 1  0, 0, 1
                                </MeshGeometry3D.Normals>
                            </MeshGeometry3D>
                        </GeometryModel3D.Geometry>
                        <GeometryModel3D.Material>
                            <DiffuseMaterial Brush="Red"/>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>

                    <!-- Нижній трикутник -->
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D>
                                <MeshGeometry3D.Positions>
                                    -1, -1, 0  1, -1, 0  0, -1, -1.5
                                </MeshGeometry3D.Positions>
                                <MeshGeometry3D.TriangleIndices>
                                    0 2 1
                                </MeshGeometry3D.TriangleIndices>
                                <MeshGeometry3D.Normals>
                                    0, 0, 1  0, 0, 1  0, 0, 1
                                </MeshGeometry3D.Normals>
                            </MeshGeometry3D>
                        </GeometryModel3D.Geometry>
                        <GeometryModel3D.Material>
                            <DiffuseMaterial Brush="Blue"/>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>

                    <!-- Лицьова сторона -->
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D>
                                <MeshGeometry3D.Positions>
                                    -1,-1,0  1,-1,0 -1,1,0
                                    1,-1,0 1,1,0 -1,1,0
                                </MeshGeometry3D.Positions>
                                <MeshGeometry3D.TriangleIndices>
                                    0 1 2 3 4 5
                                </MeshGeometry3D.TriangleIndices>
                            </MeshGeometry3D>
                        </GeometryModel3D.Geometry>
                        <GeometryModel3D.Material>
                            <MaterialGroup>
                                <DiffuseMaterial Brush="Yellow"/>
                                <SpecularMaterial Brush="White"  SpecularPower="100"/>
                            </MaterialGroup>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>

                    <!-- Ліва сторона -->
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D>
                                <MeshGeometry3D.Positions>
                                    0,1,-1.5 0,-1,-1.5 -1,1,0
                                    0,-1,-1.5 -1,-1,0 -1,1,0
                                </MeshGeometry3D.Positions>
                                <MeshGeometry3D.TriangleIndices>
                                    0 1 2 3 4 5
                                </MeshGeometry3D.TriangleIndices>
                            </MeshGeometry3D>
                        </GeometryModel3D.Geometry>
                        <GeometryModel3D.Material>
                            <MaterialGroup>
                                <DiffuseMaterial Brush="Green"/>
                                <EmissiveMaterial Brush="Gray" Color="Green" />
                            </MaterialGroup>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>

                    <!-- Права сторона -->
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D>
                                <MeshGeometry3D.Positions>
                                    0,-1,-1.5 1,1,0 1,-1,0
                                    0,-1,-1.5 0,1,-1.5 1,1,0
                                </MeshGeometry3D.Positions>
                                <MeshGeometry3D.TriangleIndices>
                                    0 1 2 3 4 5
                                </MeshGeometry3D.TriangleIndices>
                            </MeshGeometry3D>
                        </GeometryModel3D.Geometry>
                        <GeometryModel3D.Material>
                            <DiffuseMaterial Brush="Violet"/>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>

                </Model3DGroup>
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource RotateAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>